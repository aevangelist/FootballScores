<resources>

    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
  </style>-->

    <!-- inherit from the material theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/white_opaque</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">#FFFFFF</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TeamNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">#403f3f</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ScoreStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">#403f3f</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="DurationStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">#403f3f</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SupportingTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">#403f3f</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MediumLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="WidgetTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_opaque</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="WidgetLabel">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="WidgetScore">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@color/gray2</item>
    </style>

    <style name="ListViewWithDividerStyle">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/gray2</item>
        <item name="android:dividerHeight">4px</item>
    </style>

</resources>
